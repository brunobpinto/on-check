        </div>
    </div>

    <!-- Hero Section -->
    <div class="contentBody">
        <div class="col-md-6 ps-5">
            <h1 class="hero-heading">
                The <span class="highlight">only</span> to-do<br />
                list youâ€™ll <br />
                ever need.
            </h1>
            <p class="lead text-muted hero-subtext">
                Simplify work and life with the only to-do list designed<br>for you and your team to get things done.
            </p>
            <button class='btn btn-dark btn-lg hero-button' @onclick='() => NavigationManager.NavigateTo("/tasks")'>Get started</button>
        </div>
        <div class="col-md-6 text-center">
            <video src="media/OnCheckHomeAnimation.mp4" autoplay loop muted playsinline alt="Checklist Image" class="hero-video"></video>
        </div>
    </div>
</div>
